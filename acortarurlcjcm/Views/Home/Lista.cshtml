@model IEnumerable<acortarurlcjcm.Model.clsUrl>

@{
    ViewData["Title"] = "Lista";
}

<h1>Lista</h1>

<div class="container">
    <div class="table-responsive">
        <table class="table table-bordered" id="tblListaurl">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.ID)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.URL)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.AcortarURL)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Token)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Clicked)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Created)
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.ID)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.URL)
                        </td>
                        <td>
                            <a href="@item.AcortarURL" target="_blank">@item.AcortarURL</a>.
                            @*@Html.DisplayFor(modelItem => item.AcortarURL)*@
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Token)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Clicked)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Created)
                        </td>                       
                    </tr>
                }
            </tbody>
        </table>


    </div>
</div>
<a href="/" class="card-link">Volver</a>

<script>
    $(document).ready(function () {
        $('#tblListaurl').DataTable({
            "pagingType": "full_numbers"
        });
    });
</script>